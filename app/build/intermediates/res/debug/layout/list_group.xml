<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#000000"
    android:orientation="vertical"
    android:padding="8dp" >

    <TextView
        android:id="@+id/lblListHeader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="top|left"
        android:paddingLeft="?android:attr/expandableListPreferredItemPaddingLeft"
        android:textAlignment="viewStart"
        android:textColor="#f9f93d"
        android:textSize="@dimen/textsize25sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/lblheader"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/textsize5sp"
        android:layout_marginTop="@dimen/textsize2sp"
        android:layout_weight="1.61"
        android:background="@color/black"
        android:gravity="center_horizontal"
        android:maxLines="@integer/int_max_lines1"
        android:paddingBottom="5dp"
        android:paddingLeft="?android:attr/expandableListPreferredChildPaddingLeft"
        android:paddingTop="5dp"
        android:text="@string/lblHeader"
        android:textAlignment="gravity"
        android:textColor="@color/Yellow"
        android:textColorLink="@color/Yellow"
        android:textSize="@dimen/textsize20sp"
        android:textStyle="bold" />

